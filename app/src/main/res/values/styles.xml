<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="mainButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="buttonMinorStyle">

        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginBottom">64dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="textStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textSize">?android:textAppearanceLarge</item>
    </style>

    <style name="headingTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/small_padding</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>


    <style name="headingTwoTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/small_padding</item>
        <item name="android:layout_marginTop">@dimen/gap_margin</item>
        <item name="android:layout_marginEnd">@dimen/small_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="bodyTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:layout_marginStart">@dimen/small_padding</item>
        <item name="android:layout_marginEnd">@dimen/small_padding</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

</resources>
